#include "NSDetectorMessenger.hh"
#include "NSDetectorConstruction.hh"

#include "G4UIdirectory.hh"
#include "G4UIcmdWithADoubleAndUnit.hh"
#include "G4UIcmdWithADouble.hh"
#include "G4UIcmdWithAString.hh"
#include "G4UIcmdWithoutParameter.hh"

NSDetectorMessenger::NSDetectorMessenger(NSDetectorConstruction* Det)
 : G4UImessenger(),
   fDetectorConstruction(Det)
{
  // Directories

  fNSDirectory = new G4UIdirectory("/NS/");
  fNSDirectory->SetGuidance("UI commands specific to this project.");

  fDetDirectory = new G4UIdirectory("/NS/det/");
  fDetDirectory->SetGuidance("Detector construction control");

  // Detector size commands

  fShield1SizeCmd = new G4UIcmdWithADoubleAndUnit("/NS/det/setShield1Size",this);
  fShield1SizeCmd->SetGuidance("Define size of shield1");
  fShield1SizeCmd->SetParameterName("size",false);
  fShield1SizeCmd->SetUnitCategory("Length");
  fShield1SizeCmd->AvailableForStates(G4State_Idle);

  fShield2RatioCmd = new G4UIcmdWithADouble("/NS/det/setShield2Ratio",this);
  fShield2RatioCmd->SetGuidance("Define ratio shield2 : shield1");
  fShield2RatioCmd->SetParameterName("shield1Ratio",false);
  fShield2RatioCmd->AvailableForStates(G4State_Idle);

  fDetRatioCmd = new G4UIcmdWithADouble("/NS/det/setDetRatio",this);
  fDetRatioCmd->SetGuidance("Define ratio detector : shield1");
  fDetRatioCmd->SetParameterName("detRatio",false);
  fDetRatioCmd->AvailableForStates(G4State_Idle);

  // Detector materials commands

  fWorldMatCmd = new G4UIcmdWithAString("/NS/det/setWorldMaterial",this);
  fWorldMatCmd->SetGuidance("Select Material of the world.");
  fWorldMatCmd->SetParameterName("choice",false);
  fWorldMatCmd->AvailableForStates(G4State_PreInit,G4State_Idle);

  fShield1MatCmd = new G4UIcmdWithAString("/NS/det/setShield1Material",this);
  fShield1MatCmd->SetGuidance("Select Material of shield1.");
  fShield1MatCmd->SetParameterName("choice",false);
  fShield1MatCmd->AvailableForStates(G4State_PreInit,G4State_Idle);

  fShield2MatCmd = new G4UIcmdWithAString("/NS/det/setShield2Material",this);
  fShield2MatCmd->SetGuidance("Select Material of shield2.");
  fShield2MatCmd->SetParameterName("choice",false);
  fShield2MatCmd->AvailableForStates(G4State_PreInit,G4State_Idle);

  fDetMatCmd = new G4UIcmdWithAString("/NS/det/setDetMaterial",this);
  fDetMatCmd->SetGuidance("Select Material of detector.");
  fDetMatCmd->SetParameterName("choice",false);
  fDetMatCmd->AvailableForStates(G4State_PreInit,G4State_Idle);

  // Update command
  fUpdateCmd = new G4UIcmdWithoutParameter("/NS/det/update",this);
  fUpdateCmd->SetGuidance("Update geometry.");
  fUpdateCmd->SetGuidance("This command MUST be applied before \"beamOn\" ");
  fUpdateCmd->SetGuidance("if you changed geometrical value(s).");
  fUpdateCmd->AvailableForStates(G4State_Idle);
}

NSDetectorMessenger::~NSDetectorMessenger()
{
  delete fShield1SizeCmd;
  delete fShield2RatioCmd;
  delete fDetRatioCmd;

  delete fWorldMatCmd;
  delete fShield1MatCmd;
  delete fShield2MatCmd;
  delete fDetMatCmd;

  delete fUpdateCmd;

  delete fNSDirectory;
  delete fDetDirectory;
}

void NSDetectorMessenger::SetNewValue(G4UIcommand* command,G4String newValue)
{
  // Detector size commands

  if( command == fShield1SizeCmd ) {
    fDetectorConstruction
      ->SetShield1Size(fShield1SizeCmd->GetNewDoubleValue(newValue));
  }

  if( command == fShield2RatioCmd ) {
    fDetectorConstruction
      ->SetShield2Ratio(fShield2RatioCmd->GetNewDoubleValue(newValue));
  }

  if( command == fDetRatioCmd ) {
    fDetectorConstruction
      ->SetDetRatio(fDetRatioCmd->GetNewDoubleValue(newValue));
  }

  // Detector materials commands

  if( command == fWorldMatCmd )
   { fDetectorConstruction->SetWorldMat(newValue);}

  if( command == fShield1MatCmd )
   { fDetectorConstruction->SetShield1Mat(newValue);}

  if( command == fShield2MatCmd )
   { fDetectorConstruction->SetShield2Mat(newValue);}

  if( command == fDetMatCmd )
   { fDetectorConstruction->SetDetMat(newValue);}

  // Update command
  if( command == fUpdateCmd )
   { fDetectorConstruction->UpdateGeometry(); }
}

