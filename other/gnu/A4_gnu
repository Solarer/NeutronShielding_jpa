#set format y "%1.1t*10^%T"

set key bottom right
set output 'electron_fit.eps'


#-----Formatierung-----#
set grid
#set xrange [40:180]
#set yrange [0:0.6]
#set logscale x
#set logscale y



#-----Konstanten definieren-----#
pi=3.1415926
